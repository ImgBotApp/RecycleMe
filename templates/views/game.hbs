<div class="section home ACTIVE">

	<h2>Welcome{{#ifeq player.new false}} back{{/ifeq}}, {{player.name.first}}!</h2>

	{{#ifeq player.admin true}}

		{{>admin}}

	{{else}}

		<h3>So far you have {{score}} leaderboard points!</h3>

		<button class="btn" id="btn-leader" data-section="leaderboard">Leaderboard</button>
		<button class="btn" id="btn-profile" data-section="profile">Your Profile</button>

		{{!-- <button class="btn" id="btn-how-to"  data-section="how-to">How to Play</button> --}}
		<button class="btn" id="btn-play" data-section="game">PLAY</button>

	{{/ifeq}}

</div> <!-- .profile -->

<div class="section profile">

	{{>profile}}

</div>

<div class="section leaderboard">

	{{>board}}

</div> {{!-- .leaderboard --}}

<div class="section game" style="display:none">

	<div class="level-group">

		<button data-level="1">{{#if player.levelOne}}replay {{/if}}level one</button>
		<button data-level="2" {{#if player.levelOne}}{{else}}disabled{{/if}}>{{#if player.levelTwo}}replay {{else}}level two{{/if}}</button>
		<button data-level="3" {{#if player.levelTwo}}{{else}}disabled{{/if}}>{{#if player.levelThree}}replay {{else}}level three{{/if}}</button>

		{{#ifeq player.completed true}}

		<button data-level="*">free-for-all</button>

		{{/ifeq}}

		<button class="back" data-section="home">back</button>

	</div>

	<div class="row header">
		<h2></h2>
		<div id="points-counter">0</div>
	</div>
	
	<section class="row level tinderslide" data-level="1" style="display:none">

		<ul style="height:100%;">
			{{#each items}}
				{{#ifeq this.level 'One'}}
					{{> item this}}
				{{/ifeq}}
			{{/each}}
		</ul>

		{{!-- match modals --}}
		<div class="modal-group">
			{{#each items}}
				{{#ifeq this.level 'One'}}
					{{> match this}}
				{{/ifeq}}
			{{/each}}
		</div>

	</section>

	<section class="row level tinderslide" data-level="2" style="display:none">
		
		<ul style="height:100%;">
			{{#each items}}
				{{#ifeq this.level 'Two'}}
					{{> item this}}
				{{/ifeq}}
			{{/each}}
		</ul>

		{{!-- match modals --}}
		<div class="modal-group">
			{{#each items}}
				{{#ifeq this.level 'Two'}}
					{{> match this}}
				{{/ifeq}}
			{{/each}}
		</div>

	</section>

	<section class="row level tinderslide" data-level="3" style="display:none">
	
		<ul style="height:100%;">
			{{#each items}}
				{{#ifeq this.level 'Three'}}
					{{> item this}}
				{{/ifeq}}
			{{/each}}
		</ul>

		{{!-- match modals --}}
		<div class="modal-group">
			{{#each items}}
				{{#ifeq this.level 'Three'}}
					{{> match this}}
				{{/ifeq}}
			{{/each}}
		</div>

	</section>

	<div class="modal special">

		<h3>What special action should be taken on this item?</h3>

		<div class="row">
			{{#each special}}
			<div class="col-xs-6">
				<div class="option" id="{{this.key}}">
					{{{cloudinaryUrl this.image.url width=80}}}
					<h3>{{this.name}}</h3>
					{{{this.text.html}}}
				</div>
			</div>
			{{/each}}
		</div>

	</div>
		
	<div class="buttons" style="display:none">
		<input id="special" disabled="true" class="small submit" type="submit" name="submit" value="">
		<input id="trash" data-keep_enabled="true" data-event="item:trash" class="large submit" type="submit" name="submit" value="">
		<input id="recycle" data-keep_enabled="true" data-event="item:recycle" class="large submit" type="submit" name="submit" value="">
		<input id="compost" disabled="true" data-keep_enabled="true" data-event="item:compost" class="small submit" type="submit" name="submit" value="">
	</div>

</div> {{!-- .game --}}
