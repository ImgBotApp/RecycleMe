// PROFILE 

$('#btn-save-profile').on('click', function(e) {
	e.preventDefault();
	e.bubbles = false;
	e.stopImmediatePropagation();
	e.stopPropagation();

	if (clicking == true)
		return;

		clicking = true;

    if ($('.edit .team-select:selected').length > 0 || $('.edit #username').val() ) {
      console.log('changing username/team')
      var data = {
        team: $('.edit .team-select:selected').attr('id'),
        username: $('.edit #username').val()
      };

      console.log(data);

      $.post("/api/update/{{playerId}}", data, function(data){
	      console.log(data)

        // Notify success
        $('.save-msg').text('Nice! Saved.').fadeIn(function(){
        	setTimeout(function(){
        		$('.save-msg').fadeOut();
        	}, 2000);
        });

        if (!data)
          return;
        
        if (data.username) {
          $('.edit #username').val(data.username);
          $('.edit #username-text').text(data.username);
        }

        if (data.team)
          $('.edit .team-select#' + data.team.key).prop('selected', true);

        clicking = false;
      })
      .error(function(err) {
          alert( "error" + err );
      });

    }
  });

