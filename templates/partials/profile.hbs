<div class="form" id="player-profile">

	<div class="report">

		<h3>Grades: </h3>

		{{{jsonPrint player}}}

		{{#if player.gradeOne}}<p>Level One <span id="lvl-one">{{lettergrade player.gradeOne}}</span></p>{{/if}}
		{{#if player.gradeTwo}}<p>Level Two <span id="lvl-one">{{lettergrade player.gradeTwo}}</span></p>{{/if}}
		{{#if player.gradeThree}}<p>Level Three <span id="lvl-one">{{lettergrade player.gradeThree}}</span></p>{{/if}}

	</div>

	<div class="edit">

		<input type="text" placeholder="optional username" id="username">
		<input type="checkbox" name="username" value="Username"> Hide real name from leaderboard<br>

		<select>
			<option value="Choose a team">Select</option>
			{{#each teams}}
			<option value="{{this.team}}">{{this.team}}</option>
			{{/each}}
		</select>

		<button class="btn" id="btn-save-profile">Save</button>

	</div>

	<button class="back" data-section="home">back</button>

</div>

